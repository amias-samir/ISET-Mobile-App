<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".newhomepage.SectionGridHomeActivity">


    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        android:src="@drawable/purple_taaj_mahal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.ogaclejapan.arclayout.ArcLayout
        android:id="@+id/arc_layout"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_marginTop="50dp"
        app:arc_axisRadius="265dp"
        app:arc_color="@color/white"
        app:arc_freeAngle="true"
        app:arc_origin="bottom"
        app:arc_radius="280dp"
        app:arc_reverseAngle="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--disaster info-->
        <RelativeLayout
            android:layout_width="75dp"
            android:layout_height="95dp"
            app:arc_angle="65">

            <Button
                android:id="@+id/btn_disaster_info"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/dotted_line_green_head"
                android:gravity="center"
                android:text="c"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:gravity="center"
                android:text="Disaster Information"
                android:textColor="@color/black" />
        </RelativeLayout>

        <!--react quickly-->
        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="115dp"
            app:arc_angle="90">

            <Button
                android:id="@+id/btn_react_quickly"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/dotted_line_red_head"
                android:gravity="center"
                android:text="B"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:gravity="center"
                android:text="React\nQuickly"
                android:textColor="@color/black" />
        </RelativeLayout>

        <!--disaster news-->
        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="95dp"
            app:arc_angle="115">

            <Button
                android:id="@+id/btn_disaster_news"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/dotted_line_orange_head"
                android:gravity="center"
                android:text="c"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:gravity="center"
                android:text="Disaster News"
                android:textColor="@color/black" />
        </RelativeLayout>


    </com.ogaclejapan.arclayout.ArcLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/sectioned_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="210dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/arc_layout" />

</android.support.constraint.ConstraintLayout>