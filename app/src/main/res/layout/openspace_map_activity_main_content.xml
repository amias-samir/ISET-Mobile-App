<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/toolbar_purple"
            android:id="@+id/toolbar"></include>

        <com.mapbox.mapboxsdk.maps.MapView
            mapbox:layout_constraintTop_toBottomOf="@id/toolbar"
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            mapbox:layout_constraintHeight_percent=".9"
            mapbox:mapbox_cameraTargetLat="40.73581"
            mapbox:mapbox_cameraTargetLng="-73.99155"
            mapbox:mapbox_styleUrl="@string/mapbox_style_mapbox_streets"
            mapbox:mapbox_cameraZoom="11"
            />


        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_rounded_purple"
            android:textColor="@color/white"
            mapbox:layout_constraintHorizontal_bias="1.0"
            mapbox:layout_constraintStart_toStartOf="parent"
            mapbox:layout_constraintTop_toBottomOf="@id/toolbar"
            mapbox:layout_constraintVertical_bias="0.982"
            android:text="Switch View"
            android:textOn="Satellite View"
            android:textOff="Street View"
            />

        <Button
            android:id="@+id/point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Point"
            mapbox:layout_constraintTop_toBottomOf="@id/toolbar"
            mapbox:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp"
            android:background="@android:color/transparent"
            android:visibility="visible"/>

        <Button
            android:id="@+id/multipolygon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Multipolygon"
            mapbox:layout_constraintTop_toBottomOf="@id/point"
            mapbox:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp"
            android:background="@android:color/transparent"
            android:visibility="visible"/>

        <Button
            android:id="@+id/multiLineString"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Line"
            mapbox:layout_constraintTop_toBottomOf="@id/multipolygon"
            mapbox:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp"
            android:background="@android:color/transparent"
            android:visibility="visible"/>


        <Button
            android:id="@+id/navigation"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Start Navigation"
            mapbox:layout_constraintTop_toBottomOf="@id/multiLineString"
            mapbox:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp"
            android:background="@drawable/button_rounded_purple"
            android:textColor="@color/white"/>


    </android.support.constraint.ConstraintLayout>
</FrameLayout>